@using Microsoft.AspNetCore.Identity
@using NewProject.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <a asp-area="" asp-controller="Carts" asp-action="Index">Basket</a> 
        <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
    </form>
}
else
{
    <div class="navbar-right">
        <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-link navbar-btn navbar-link">Register</a>
        <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-link navbar-btn navbar-link">Log in</a>
    </div>
}
